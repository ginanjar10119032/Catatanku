<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ginanjartg.catatanku">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/catatan"
        android:label="@string/nim_nama_app"
        android:roundIcon="@drawable/catatan"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catatanku"
        tools:targetApi="31">
        <activity
            android:name=".note.DetailNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom"/>
        <activity
            android:name=".note.AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom" />
        <activity
            android:name=".note.EditNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom" />
        <activity
            android:name="com.ginanjartg.catatanku.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom" />
        <activity
            android:name="com.ginanjartg.catatanku.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom" />
        <activity
            android:name="com.ginanjartg.catatanku.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Catatanku.Custom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ginanjartg.catatanku.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Catatanku.Custom" />
    </application>

</manifest>